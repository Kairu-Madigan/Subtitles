ul.carousel-inner
  margin: 0
  padding: 0
  height: 400px
  width: 100%
  box-sizing border-box
  position relative

ul.carousel-inner li.item
  position absolute top left
  width 100%
  height 100%
  display none
  transition opacity 

  &.active
    display block
    opacity 1

    &.left
      opacity 0

  &.prev
    opacity 0

  &.next
    opacity 1

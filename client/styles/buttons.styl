@import 'nib'


button
input[type='button'].btn
input[type='submit'].btn
  font-size 12px
  font-family "Open Sans", Helvetica, Arial, sans-serif
  color white
  border-radius 2px
  margin 3px
  background-color #757575
  border none
  padding 5px 11px

  &.wide
    width 100% !important

  &.large
    font-size 13px
    padding 7px 13px


  &.pink
    background-color #AEACD8

    &:hover
      background-color #A19FC9

  &.tan
    background-color #DEC585

    &:hover
      background-color #CAB378

  &.pull-right
    float right

  &.pull-left
    margin-left 0

  &.circle
    border-radius 50px
    border 2px solid #777
    padding 5px 6px
    background white
    line-height 12px

.toolbar input[type='button'].btn,
.toolbar .btn
  padding 5px 13px

#hints
  margin 5px

.close
  float right
  font-size 20px
  font-weight bold
  line-height 20px
  color black
  text-shadow 0 1px 0 white
  opacity 0.2

button.close
  padding 0
  cursor pointer
  background transparent
  border 0
  -webkit-appearance none

div.btn-group
  padding 0px
  display inline-block
  margin 5px
  margin-right 0px
  float right

  & button.btn
    border-radius 0px
    margin 0px
    margin-left -1px
    border-left 1px solid #ccc

    &:first-child
      border-top-left-radius 2px
      border-bottom-left-radius 2px
      margin-left 0px

  & button.active
    box-shadow inset 0px 5px 10px rgba(0,0,0,0.10)
    background rgba(0,0,0,0.15)
    color rgba(0,0,0,0.60)

  &:after
    clear both

  & input
    margin 0

fieldset > .btn:last-child
.btn-group > .btn:last-child
.btn-group > .dropdown-toggle
  border-top-right-radius 2px !important
  border-bottom-right-radius 2px !important

input
  border 0px
  border-radius 2px
  margin 8px

  &[type='text']
  &[type='password']
  &[type='email']
    padding: 4px
    font-size: 12px
    box-sizing border-box
    font-family "Open Sans", Helvetica, Arial, sans-serif

    &.large
      padding 6px
      font-size 13px

    &.wide
      width 100%

  &[type='button']
    width default

fieldset
  padding 5px 10px
  border none
  border-radius 3px
  vertical-align top
  font-size 11px
  display inline-block
  background rgba(180, 180, 180, 0.36)

  & span
    font-size 12px
    margin 2px 4px
    display inline-block

  & input
    margin 2px

legend
  display inline
  max-width 15px

input[type='checkbox']
  margin 0px

input[type='range']
  width 80px
  vertical-align top
  margin-top 15px

a.video-controls
  background-repeat no-repeat
  display inline-block
  cursor pointer
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05), inset 0 1px 0px white  
  border 1px solid #999
  border-bottom 1px solid #888

  &#play-video
    border-radius 30px
    width 35px
    height 35px
    background-image url('/images/controls/play_dark.png')
    background-position -5px -2px
   
    &.paused
      background-position -39px -2px

  &#skip-to-end
    width 30px
    height 30px
    border-radius 30px
    background-image url('/images/controls/skip_to_end.png')
    background-position -1px 0px
    margin-bottom 2px

    &:hover
      background-position -28px 0px

  &#skip-to-beginning
    width 30px
    height 30px
    border-radius 30px
    background-image url('/images/controls/skip_to_beginning.png')
    background-position -32px 0px
    margin-bottom 2px

    &:hover
      background-position -5px 0px


#export-subtitles
  margin-right 0px

.controls
  margin-top 12px
  text-align center

.video-buttons
  margin-top 8px
  text-align center



@import 'nib'

ul.file-list
  height 400px
  overflow auto
  list-style-type none
  margin 0px
  padding 0px
  box-shadow rgba(34, 34, 34, 0.15) -1px -1px
  border-radius 5px

  & li
    border-bottom 1px dotted rgba(211, 207, 207, 0.33)
    float left
    width 100%

    &:hover a.delete-project
      opacity 1

    &:hover
      background #E8F7FF

    &.selected .select-video-file
      display block

table.file-list
  & tr
    transition height 0.3s

    &:hover
      background #f5f5f5

  & td.name
    width 100%

  & div.video-select
    width 150px
    display none

  & .selected .video-select
    display block

  & input
    height 0
    width 0
    margin 0
    padding 0
    opacity 0
    pointer-events none

  & .select-video-file
    width 100%
    margin 5px

  & a
    color #0088cc
    font-size 14px
    line-height 20px
    text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
    display block
    padding 8px 14px
    width 100%

    &.delete-project
      border-left 1px dotted rgba(211, 207, 207, 0.33)
      opacity 0.5
      width 15px

    &:hover
      text-decoration none

.carousel input
  height 0
  width 0
  margin 0
  padding 0
  opacity 0
  pointer-events none

.select-video-file
  padding-left 20px
  padding-top 10px
  padding-right 25px

  & a
    width 100%
    padding-top 30px
    padding-bottom 30px
    display block
    background #FAFAFC
    border-radius 5px
    font 400 12px 'Helvetica Neue', Helvetica, arial, sans-serif
    border 2px dashed #B4b4b4
    color #999
    text-align center

    &:hover
      background whiteSmoke
      text-decoration none
      cursor pointer

.projects
  min-height 350px

form#new-project
  & input[type='text']
    margin-left 0px
    margin 0px
    border-top-right-radius: 0px
    border-bottom-right-radius: 0px
    width: 242px
    border-bottom 1px solid #ccc
  & input[type='submit']
    margin-right 0px
    margin 0px
    border-top-left-radius  0px
    border-bottom-left-radius 0px
    border 1px solid #ccc
    border-left 0px

input#video-file
  display block
  height 0
  width 0
  margin 0

button.delete-sub
  margin 0px
  margin-top 15px

button.go-back
  margin 5px
  margin-bottom 1px

#myCarousel
  height 400px

  & .carousel-inner
    height 400px

#drop
  min-height 100px
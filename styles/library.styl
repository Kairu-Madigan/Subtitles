@import 'nib'


ul.file-list
  height 400px
  overflow auto
  list-style-type none
  margin 0px
  padding 0px
  box-shadow rgba(34, 34, 34, 0.15) -1px -1px
  border-radius 5px

  & li
    border-bottom 1px dotted rgba(211, 207, 207, 0.33)
    float left
    width 100%

    &:hover a.delete-project
      opacity 1

    &:hover
      background #E8F7FF

    &.selected .select-video-file
      display block

table.file-list
  & tr
    transition height 0.3s

    &:hover
      background #f5f5f5

  & td.name
    width 100%

  & div.video-select
    width 150px
    display none

  & .selected .video-select
    display block

  & input
    height 0
    width 0
    margin 0
    padding 0
    opacity 0
    pointer-events none

  & .select-video-file
    width 100%
    margin 5px

  & a
    color #0088cc
    font-size 14px
    line-height 20px
    text-shadow 0 1px 0 rgba(255, 255, 255, 0.5)
    display block
    padding 8px 14px
    width 100%

    &.delete-project
      border-left 1px dotted rgba(211, 207, 207, 0.33)
      opacity 0.5
      width 15px

    &:hover
      text-decoration none

.carousel input
  height 0
  width 0
  margin 0
  padding 0
  opacity 0
  pointer-events none



.projects
  min-height 350px

form#new-project
  & input[type='text']
    margin-left 0px
    margin 0px
    border-top-right-radius: 0px
    border-bottom-right-radius: 0px
    width: 242px
  & input[type='submit']
    margin-right 0px
    margin 0px
    border-top-left-radius  0px
    border-bottom-left-radius 0px
    border-left 0px

input#video-file
  display block
  height 0
  width 0
  margin 0

button.go-back
  margin 5px
  margin-bottom 5px

#myCarousel
  height 450px

  & .carousel-inner
    height 450px

#drop
  margin-bottom 10px
  margin-top 10px
  &:hover
    cursor pointer

.item:first-child
  border-radius 5px 5px 0px 0px

.submenu-header
  border-radius 5px 5px 0px 0px
  box-shadow 0px 1px 2px rgba(0, 0, 0, 0.08)

  & span
    vertical-align: bottom
    margin-bottom: 9px
    font-weight: 500
    display: inline-block
    text-shadow: 1px 1px rgba(255, 255, 255, .8)
    color: #999
    font-size: 14px

.submenu-content
  padding 15px
  padding-top 10px
  padding-bottom 0px
  text-shadow: 1px 1px rgba(255, 255, 255, .8)

  
  & .pull-right
    margin-right 0px 

  & p
    font-size 12px
    color #999
    font-weight 400
    margin-bottom 8px
    margin-top 8px

.select-video-file

  & a
    padding-top 70px
    padding-bottom 70px
    display block
    background #FAFAFC
    border-radius 5px
    font 400 12px 'Helvetica Neue', Helvetica, arial, sans-serif
    border 2px dashed #B4b4b4
    color #999
    text-align center

    &:hover
      background whiteSmoke
      text-decoration none
      cursor pointer

    &.target
      border 2px dashed #888
      background whiteSmoke


.columns
	position relative
	line-height 1
	height 400px
	overflow auto

	& .nav-list
		height 400px

	& input[type=file]
		display none

	& .nav-list a
		padding-right 20px

.columns-inner
	overflow hidden
	width 100%
	position relative
	
.columns
	& .item
		transition-property left
		transition-duration 0.3s
		display block

	& .menu
		position: relative
		left 0

	& .submenu
		position absolute
		top 0
		width 100%
		left 100%

.columns.sub
	& .menu
		position absolute
		left -100%
		top 0
		width 100%

	& .submenu
		position relative
		left 0


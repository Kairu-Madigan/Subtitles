@import 'nib'

div.timeline-wrapper
  margin 20px
  margin-top 0px
  margin-bottom 20px
  background rgba(255,255,255,0.35)
  box-shadow inset 10px 10px 45px rgba(255, 255, 255, 0.77), 2px 2px 10px rgba(0, 0, 0, .05)
  line-height 0px
  border-radius 5px

text
  fill #666
  font-size 10px

g.caption-spans rect
  shape-rendering crispEdges
  // fill rgba(142, 255, 246, 0.77)
  //fill rgb(254, 226, 255)
  stroke rgb(68, 68, 68)

g.caption-spans rect:hover
  fill white
  cursor pointer

line.timeline-background
  // stroke rgb(171, 175, 209)
  stroke rgb(173, 173, 173)
  stroke-width 1
  shape-rendering crispEdges

rect.timeline-click-zone
  fill rgba(0,0,0,0)

  &:hover
    cursor pointer

line.tick-bar
  shape-rendering crispEdges
  stroke rgb(173, 173, 173)
  stroke-width 1

line#current-position
  stroke-width 3px
  stroke black
  shape-rendering crispEdges

  &:hover
    cursor pointer

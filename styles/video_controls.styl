@import 'nib'

#timeBar
  position absolute
  top 0
  left 0
  width 10px
  height 100%
  background-color #ccc
  transition-property all
  transition-duration 0.05s
  transform scale3d(1,1,1)
  &:hover
    transform scale3d(1.5,1.5,1.5)

.progressBar
  position relative
  width 100%
  height 10px
  background-color black
  transition-property all
  transition-duration 0.2s
  &:hover
    height 20px
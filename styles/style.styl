@import 'nib'

body
  padding-top 50px
  height 100%
  background-image url('/images/husk.png')

hr
  height 0px
  box-shadow 0px 1px 4px rgba(0, 0, 0, 0.10), 0px -1px 2px rgba(0, 0, 0, 0.05)
  border-bottom 1px solid #fff
  border-top 1px solid #bbb
  border-left 0px
  border-right 0px
  margin 3px 0px 3px 0px

video
  width  100%

textarea
  width 400px
  display block
  height 50px

.expandingArea textarea.selected
  background white

ul#captions
  list-style-type none
  padding 0px
  float left
  margin 0
  height 100px
  overflow auto
  & li
    margin 2px 0px
    opacity 1
    background rgba(245, 245, 245, 0.52)
    transition-property  opacity
    transition-duration 0.2s
    &:first-child
      margin 0px
    &:hover .expandingArea
      border-left 1px dotted #BBB
      border-right 1px dotted #bbb
    &.deleted
      opacity 0


div.times
  margin 0px
  text-align right
  padding 7px 5px
  display inline-block
  vertical-align top
  width 130px
  overflow hidden
  font 12px HelveticaNeue, Helvetica, arial, sans-serif

a.delete-sub
  display inline-block
  vertical-align top

textarea
pre
  overflow hidden
  resize none
  outline none
  margin 0
  padding 0
  border none

.expandingArea 
  position relative
  display inline-block
  border 1px solid transparent
  width 360px

.expandingArea > textarea
.expandingArea > pre
  padding 5px
  background transparent
  font 400 13px/16px Helvetica, arial, sans-serif
  white-space pre-wrap
  word-wrap break-word

.expandingArea > textarea
  box-sizing border-box
  width 100%

.expandingArea.active > textarea
  overflow hidden
  position absolute
  top 0
  left 0
  height 100%
  resize none

.expandingArea > pre
  display none

.expandingArea.active > pre 
  display block
  visibility hidden

#captions
  position static
  top 140px
  width 100%
  overflow auto

#video-column
  position fixed
  top 80px
  width 400px
  left 50px
  bottom 50px

#caption-column
  position fixed
  top 80px
  left 450px
  right 50px
  bottom 50px

.caption
  position relative
  & a
    display inline-block
  & i
    margin 6px
    opacity 0.3
  &:hover i
    opacity 1

.video-map-caption:hover
  cursor pointer

img.logo
  float left
  height 30px
  margin 5px22

.navbar-inner
  background-image linear-gradient(#f7f7f7, #E9E9E9)
  border-bottom 1px solid white
  // background-color #707070
  box-shadow 1px 1px 5px rgba(0, 0, 0, 0.15)
  & a
    font 12px HelveticaNeue, Helvetica, arial, sans-serif
    padding 5px 20px 5px 20px

#videoSpan
  margin-bottom 5px
  margin-top 5px
  overflow visible

text
  font-size 10px

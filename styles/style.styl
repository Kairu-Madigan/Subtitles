@import 'nib'

body
  padding-top 28px
  font 12px 'Helvetica Neue', Helvetica, arial, sans-serif
  height 100%
  background-image url('/images/backgrounds/fabric_plaid_blue_light.png')

a
  text-decoration none

a:hover
  text-decoration underline

h1
  font 900 50px 'Helvetica Neue', Helvetica, arial, sans-serif
  color #333
  margin-bottom 0px
  line-height 45px

h2
  font 100 16px Helvetica, arial, sans-serif
  margin 8px 0px
  padding: 10px
  display: inline-block
  border-radius: 5px
  background: rgba(255, 255, 255, 0.5)

light
  color #888

h3
  font 100 18px Helvetica, arial, sans-serif
  margin 6px 2px
  color #999
  text-shadow 1px 1px 1px white

hr
  height 0px
  box-shadow 0px 1px 4px rgba(0, 0, 0, 0.10), 0px -1px 2px rgba(0, 0, 0, 0.05)
  border-bottom 1px solid #fff
  border-top 1px solid #bbb
  border-left 0px
  border-right 0px
  margin 3px 0px 3px 0px

video
  width  100%

.wrapper
  background rgba(255,255,255,0.60)
  padding 10px
  background linear-gradient(#FAFAFA, #DDD)
  box-shadow 0 1px 15px rgba(0, 0, 0, 0.15), inset 0 1px 0px white
  border: 1px solid #CCC
  border-bottom 1px solid #bbb
  border-radius 5px

.wrapper-inset
  box-shadow inset 1px 1px 2px #CACACA
  border-radius 5px
  padding-left 2px
  padding-top 2px
  background white

.wrapper-video
  background-image linear-gradient(#eee, #ddd)

textarea
  width 400px
  display block
  height 50px

.expandingArea textarea.selected
  background white

.video-dropzone
  border-radius 5px
  line-height 0

.dropzone
  min-height 170px
  background rgba(255,255,255,0.8)
  background-image linear-gradient(#fff, #C7C7C7)
  box-shadow inset 1px 1px 2px #CACACA
  text-align center
  border-radius 5px
  color #999
  line-height 0
  margin-bottom 5px

  &:hover
    cursor pointer

  & p
    display inline-block
    margin-top 80px

.dropzone.occupied
  padding-top 0px

#captions
  overflow-y auto
  background white
  padding 3px
  box-shadow inset 2px 2px 2px rgba(0, 0, 0, 0.23)
  border-radius 5px

table.captions
  padding 0
  margin 0
  overflow-y scroll
  width 100%
  border-spacing 0

  & tbody
    width 100%

  & tr
    margin 2px 0px
    opacity 1
    transition-property  opacity
    transition-duration 0.2s

    &.selected
      background #EAEAF5
      background-image linear-gradient(white, #EAEAF5)

    &:first-child
      margin 0px

    &:hover .expandingArea
      border-left 1px dotted #eee
      border-right 1px dotted #eee

    &.deleted
      opacity 0

    & td
      border-bottom 1px dotted #eee
      margin-top -1px

    & td.left-fixed-width
      width 140px

    & td.right-fixed-width
      width 30px

td.delete-sub
  vertical-align top

  &:hover
    cursor pointer

td.times
  text-align right
  vertical-align top
  font 12px HelveticaNeue, Helvetica, sans-serif

  & p
    padding 0
    margin 5px
    margin-top 8px

.caption
  position relative
  & a
    display inline-block
  & i
    margin 6px 10px
    opacity 0.3
  &:hover i
    opacity 1

textarea
pre
  overflow hidden
  resize none
  outline none
  margin 0
  padding 0
  border none

.expandingArea 
  position relative
  display inline-block
  width 100%
  border 1px solid transparent

.expandingArea > textarea
.expandingArea > pre
  padding 6px
  background transparent
  white-space pre-wrap
  word-wrap break-word

.expandingArea > textarea
  box-sizing border-box
  width 100%

.expandingArea.active > textarea
  overflow hidden
  position absolute
  top 0
  left 0
  height 100%
  resize none

.expandingArea > pre
  display none

.expandingArea.active > pre 
  display block
  visibility hidden

#dialog
  box-shadow 4px 4px 15px rgba(0, 0, 0, .3);

.toolbar
  margin-bottom 3px

img#loader
  margin 13px 20px 13px
  display none

  &.visible
    display block
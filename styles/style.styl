@import 'nib'

body
  padding-top 30px
  height 100%
  background-image url('/images/husk.png')

hr
  height 0px
  box-shadow 0px 1px 4px rgba(0, 0, 0, 0.10), 0px -1px 2px rgba(0, 0, 0, 0.05)
  border-bottom 1px solid #fff
  border-top 1px solid #bbb
  border-left 0px
  border-right 0px
  margin 3px 0px 3px 0px

video
  width  100%

textarea
  width 400px
  display block
  height 50px

.expandingArea textarea.selected
  background white

#captions
  overflow-y auto

table.captions
  padding 0
  margin 0
  overflow-y scroll
  width 100%
  border-spacing 0

  & tbody
    width 100%

  & tr
    margin 2px 0px
    opacity 1
    transition-property  opacity
    transition-duration 0.2s
    background rgba(245, 245, 245, 0.85)

    &:first-child
      margin 0px

    &:hover .expandingArea
      border-left 1px dotted #BBB
      border-right 1px dotted #bbb

    &.deleted
      opacity 0

    & td
      border-bottom 2px solid rgb(226, 223, 223)

    & td.left-fixed-width
      width 140px

    & td.right-fixed-width
      width 30px

td.delete-sub
  vertical-align top

td.times
  text-align right
  vertical-align top
  font 12px HelveticaNeue, Helvetica, sans-serif

  & p
    padding 0
    margin 5px
    margin-top 8px

.caption
  position relative
  & a
    display inline-block
  & i
    margin 6px 10px
    opacity 0.3
  &:hover i
    opacity 1

textarea
pre
  overflow hidden
  resize none
  outline none
  margin 0
  padding 0
  border none

.expandingArea 
  position relative
  display inline-block
  width 100%
  border 1px solid transparent

.expandingArea > textarea
.expandingArea > pre
  padding 6px
  background transparent
  font 400 13px/16px Helvetica, arial, sans-serif
  white-space pre-wrap
  word-wrap break-word

.expandingArea > textarea
  box-sizing border-box
  width 100%

.expandingArea.active > textarea
  overflow hidden
  position absolute
  top 0
  left 0
  height 100%
  resize none

.expandingArea > pre
  display none

.expandingArea.active > pre 
  display block
  visibility hidden



.video-map-caption:hover
  cursor pointer

img.logo
  float left
  height 30px
  margin 5px22

.navbar-inner
  background-image linear-gradient(#f7f7f7, #E9E9E9)
  border-bottom 1px solid white
  // background-color #707070
  box-shadow 1px 1px 4px rgba(0, 0, 0, 0.25)
  & a
    font 13px HelveticaNeue, Helvetica, arial, sans-serif
    color #666
    padding 5px 20px 5px 20px
